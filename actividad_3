		{
	
			case 1:system("cls"); 
			       cout<<"escriba la coordenada donde quiere parquear el vehiculo "<<endl;
			       cout<<"numero de la fila: "<<endl;
			       cin>>fla;
			       cout<<"numero de la columna: "<<endl;
			       cin>>clm;
			       
			     m1[fla][clm] = 1;
			     
			     
	        

			
			
			
			       break;
			       
		    case 2:system("cls");
			
			
			
			       break;
			       
		    case 3:system("cls");
			
			
			
			       break;
			       
			case 7:seguir=false;
			       break;  
     	}
     	
     }
     	
	while(seguir==true);
	
